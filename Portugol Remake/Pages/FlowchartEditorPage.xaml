<Page x:Class="Portugol_Remake.Pages.FlowchartEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:localViews="clr-namespace:Portugol_Remake.Views"
      xmlns:localShapes="clr-namespace:Portugol_Remake.Views.Shapes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlowchartEditor" Loaded="Page_Loaded">
    <Grid x:Name="MainGrid" ScrollViewer.CanContentScroll="True">
        <localViews:CustomScrollView  x:Name="ContentScroller" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MouseWheel="Grid_MouseWheel">
            <Grid x:Name="GridContent" Background="Transparent" HorizontalAlignment="Left">
                <Grid.LayoutTransform>
                    <MatrixTransform/>
                </Grid.LayoutTransform>
            </Grid>
        </localViews:CustomScrollView>
    </Grid>
</Page>
